{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types" // Add this if you have a custom types directory
    ]
  },
  "include": [
    "nuxt.config.ts",
    "types/**/*.d.ts",
    "plugins/**/*.ts",
    "pages/**/*.vue",
    "components/**/*.vue",
    "composables/**/*.ts",
    "content/**/*.md",
    "content/**/*.yml",
    "modules/**/*.ts",
    "middleware/**/*.ts",
    "utils/**/*.ts",
    "validator/**/*.ts"
  ]
}
